#! /bin/sh

. `dirname $0`/common

case "$1" in  
init)
    if ! pkg_initialized $PACKAGE; then

	pkg_set_init_flag $PACKAGE

	SAMBA_SERVER_ENABLED=`make_caps $SAMBA_SERVER_ENABLED`

	if [ "$SAMBA_SERVER_ENABLED" = "ON" ] ; then
		smbd -D
	fi
    fi
    ;;
help)
    echo "Usage: $0 init"
    ;;
  *)
    exit 1
    ;;
esac

exit 0
