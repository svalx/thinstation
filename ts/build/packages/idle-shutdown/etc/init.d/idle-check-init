. `dirname $0`/common

case "$1" in
init)
    if [ -z ${SHUTDOWN_IDLE_INTERVAL} ]; then
      SHUTDOWN_IDLE_INTERVAL=5
    fi
    echo "*/$SHUTDOWN_IDLE_INTERVAL * * * * /bin/idle-check.sh" >> /tmp/crontab
    crontab /tmp/crontab
    ;;
help)
    echo "Usage: $0 init"
    ;;
  *)
    exit 1
    ;;
esac

exit 0
